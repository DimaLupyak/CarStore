@model CarStoreViewModels.Cart

<div class="navbar-right">
    <a 
       href="@Url.Action("Index", "Cart")">
        <span class="glyphicon glyphicon-shopping-cart cart-btn"></span>
    </a>
</div>

<div class="navbar-text navbar-right">
    <b>Your cart:</b>
    @Model.Lines.Sum(x => x.Quantity) products
    @if(Model.Lines.Sum(x => x.Quantity) != 0)
    { 
        @Model.ComputeTotalValue().ToString(", #$")
    }
        
</div>