
<div class="jumbotron">
    <div class="row">
        <div class="col-md-3">
            <h2 style="text-align: center">Gallery</h2>
            <a href="@Url.Action("Gallery", "Product")"><img src="@Url.Content("~/Content/gallery-icon.png")" alt="Product Gallery" class="img-responsive homeBtn"/></a>
        </div>
        <div class="col-md-6">
            <h2 style="text-align: center">Car store</h2>
            <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <h4>Best models and prices!</h4>
                    </div>
                    <div class="item">
                        <h4>Impeccable reputation!</h4>
                    </div>
                    <div class="item">
                        <h4>Best mentor and nice developer!</h4>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>            
        </div>
        <div class="col-md-3">
            <h2 style="text-align: center">List</h2>
            <a href="@Url.Action("List", "Product")"><img src="@Url.Content("~/Content/list-icon.png")" alt="Product Gallery" class="img-responsive homeBtn"/></a>
        </div>
    </div>
</div>

